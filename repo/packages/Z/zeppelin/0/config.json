{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "zeppelin": {
            "type": "object",
            "properties": {
                "spark_version":  {
                    "description": "The version of the Spark distribution to run with Zeppelin.",
                    "type": "string",
                    "default": "spark-1.6.0"
                },
                "vhost": {
                    "description": "The domain name marathon-lb will use to route requests to this app",
                    "type": "string",
                    "default": ""
                }
            },
            "required": [
                "spark_version"
            ]
        }
    }
}
