{
  "id": "{{quobyte.framework-name}}",
  "cpus": {{quobyte.cpus}},
  "mem": {{quobyte.mem}},
  "instances": {{quobyte.instances}},
  "args": [
    "--zk", "{{quobyte.zk}}",
    "--master", "{{mesos.master}}",
    "--port", "{{quobyte.port}}",
    "--docker_image", "{{quobyte.docker_image}}",
    "--mesos_dns_domain", "{{quobyte.mesos-dns_domain}}"
    ],
  "env":{
    "LD_LIBRARY_PATH": "/opt:$LD_LIBRARY_PATH"
    },
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "quobyte/quobyte-mesos",
      "network": "BRIDGE",
      "portMappings": [
        {
          "containerPort": "{{quobyte.port}}",
          "hostPort": "{{quobyte.port}}",
          "servicePort": "{{quobyte.port}}",
          "protocol": "tcp"
        }
      ]
    }
  },
  "healthChecks": [
    {
      "path": "/v1/health",
      "portIndex": 0,
      "protocol": "HTTP",
      "gracePeriodSeconds": 300,
      "intervalSeconds": 60,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3
    }
  ]
}
